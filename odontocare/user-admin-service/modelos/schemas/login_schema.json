{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Login",
    "description": "Schema for validating user login",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "description": "user name",
            "minLength": 1,
            "maxLength": 30
        },
        "password": {
            "type": "string",
            "description": "password"
        }
    },
    "required": ["username", "password"],
    "additionalProperties": false
}
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Doctor",
    "description": "Schema for validating doctor creation",
    "type": "object",
    "properties": {
        "id_usuario": {
            "type": "integer",
            "description": "user id"
        },
        "nombre": {
            "type": "string",
            "description": "Nombre del doctor",
            "maxLength": 30
        },
        "apellido": {
            "type": "string",
            "description": "Apellido del doctor",
            "maxLength": 30
        },
        "especialidad": {
            "type": "string",
            "description": "Especialidad del doctor",
            "maxLength": 30
        }
    },
    "required": ["nombre", "apellido", "especialidad"],
    "additionalProperties": false
}
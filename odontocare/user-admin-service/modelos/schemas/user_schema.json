{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Usuario",
    "description": "Schema for validating user creation",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "description": "user name",
            "minLength": 1,
            "maxLength": 30
        },
        "password": {
            "type": "string",
            "description": "password",
            "minLength": 8
        },
        "rol": {
            "type": "string",
            "description": "rol del usuario",
            "enum": ["admin", "doctor", "secretariat", "patient"]
        }
    },
    "required": ["username", "password", "rol"],
    "additionalProperties": false
}
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Usuario",
    "description": "Schema for validating user password change",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "description": "user name",
            "minLength": 1,
            "maxLength": 30
        },
        "password": {
            "type": "string",
            "description": "old password",
            "minLength": 8
        },
        "new_password": {
            "type": "string",
            "description": "new password",
            "minLength": 8
        }
    },
    "required": ["username", "password", "new_password"],
    "additionalProperties": false
}